@import "../../sc-ui.wxss";

.sc-textarea-label{
    display: block;
    width: 100%;
    font-size: 32rpx;
    pointer-events:none; /* 该元素不会成为鼠标事件的target*/
    transform-origin: left;  /* transition旋转或移动的基点*/
    -webkit-transition: all .2s;
    -webkit-transform-origin: left;
}

.sc-textfield-floating-label{
    position: relative;
}

.sc-textfield-floating-label .sc-textarea-label{
    -webkit-transform: scale(1) translateY(27px);
    transform: scale(1) translateY(27px);
}

.sc-textfield-floating-label .sc-textarea-label-focus{
    -webkit-transform: scale(.75) translateY(0);
    transform: scale(.75) translateY(0);
}

.sc-textfield-floating-label .sc-textarea-focus::after{
    width: 100%;
}