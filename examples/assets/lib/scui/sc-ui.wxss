/* sc-progress */

.sc-progress{
    position: relative;
    display: block;
    width: 100%;
    height: 4px;
    overflow: hidden;
    background-color: rgba(63,81,181,.2);
    border-radius: 2px;
}

.sc-progress-indeterminate{
    position: relative;
    display: block;
    width: 100%;
    height: 4px;
    overflow: hidden;
    background-color: rgba(63,81,181,.2);
    border-radius: 2px
}

.sc-progress-indeterminate:before{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    content: '' ;
    background-color: inherit;
    -webkit-animation: sc-progress 1.5s linear infinite;
    animation: sc-progress 1.5s linear infinite;
    animation-name: sc-progress;
    animation-duration: 1.5s;
    animation-timing-function: linear;
    animation-delay: initial;
    animation-iteration-count: infinite;
    animation-direction: initial;
    animation-fill-mode: initial;
    animation-play-state: initial;
    will-change: left,width;
}

@-webkit-keyframes sc-progress {
    0%{
        left: 0;
        width: 0;
    }

    33%{
        left: 33%;
        width: 33%;
    }

    66%{
        left: 66%;
        width: 66%;
    }

    100%{
        left: 100%;
        width: 0;
    }
}

@keyframes sc-progress {
    0%{
        left: 0;
        width: 0;
    }

    50%{
        left: 30%;
        width: 70%;
    }

    100%{
        left: 100%;
        width: 0;
    }
}

