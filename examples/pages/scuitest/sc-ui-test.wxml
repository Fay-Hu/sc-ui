    <view style="margin: 16px" >
        <view style="text-align: center;margin-bottom: 16px">check组件</view>
        <view>
            <sc-checkbox-group sc-class="sc-checkbox-group-row" bindchange="checkboxChange">
                <sc-checkbox sc-class="sc-checkbox" label="初始选中" checked="{{true}}" value="check1"></sc-checkbox>
                <sc-checkbox sc-class="sc-checkbox" label="初始未选中" checked="{{false}}"  value="check2"></sc-checkbox>
                <sc-checkbox disabled="{{true}}" sc-class="sc-checkbox" label="禁用" checked="{{false}}"></sc-checkbox>
            </sc-checkbox-group>
        </view>
    </view>

    <view style="margin: 16px">
        <view style="text-align: center;margin-bottom: 16px">switch组件</view>
        <view>
            <sc-switch style="height: 36px" sc-class="sc-switch" bind:change="switchChange"></sc-switch>
            <sc-switch style="margin-left: 16px" sc-class="sc-switch" disabled="{{true}}" bind:change="switchChange"></sc-switch>
            <sc-checkbox sc-class="sc-checkbox" label="初始选中" value="value" checked="{{true}}" bind:checkChange="checkChange"></sc-checkbox>
        </view>
    </view>

    <view style="margin: 16px">
        <view style="text-align: center;margin-bottom: 16px">radio组件</view>
        <view>
            <sc-radio-group bind:change="radioChange">
                <sc-radio style="margin-right: 8px" label="测试" sc-class="sc-radio" checked="{{true}}" value="radio1"></sc-radio>
                <sc-radio style="margin-right: 8px" label="测试" sc-class="sc-radio" value="radio2"></sc-radio>
                <sc-radio style="margin-right: 8px" label="测试" sc-class="sc-radio" checked disabled></sc-radio>
            </sc-radio-group>
        </view>
    </view>

    <view style="margin: 16px;width: 80%;">
        <view style="text-align: center;margin-bottom: 16px">进度条组件</view>
        <view style="width: 100%;text-align: center">
            <sc-progress sc-class="sc-progress"></sc-progress>
            <sc-progress sc-class="sc-progress" sc-determinate-class="sc-progress-determinate" type="determinate"  width="{{80}}"></sc-progress>
