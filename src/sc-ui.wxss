/* sc-radio-group */
.sc-radio-group{
    padding: 8px;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: start;
    align-items: center;
}

/* layout 会覆盖之前的样式*/

.layout-row{
    display: flex;
    flex-direction: row;
}

.layout-column{
    display: flex;
    flex-direction: column;
}

.layout-center{
    justify-content: center;
    align-items: center;
    align-content: center;
}

.layout-start{
    justify-content: start;
    align-items: start;
    align-content: start;
}