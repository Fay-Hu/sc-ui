    box-shadow: 0 4px 5px -2px rgba(0,0,0,.2), 0 7px 10px 1px rgba(0,0,0,.14), 0 2px 16px 1px rgba(0,0,0,.12);
}

.box-shadow-8{
    -webkit-box-shadow: 0 5px 5px -3px rgba(0,0,0,.2), 0 8px 10px 1px rgba(0,0,0,.14), 0 3px 14px 2px rgba(0,0,0,.12);
    box-shadow: 0 5px 5px -3px rgba(0,0,0,.2), 0 8px 10px 1px rgba(0,0,0,.14), 0 3px 14px 2px rgba(0,0,0,.12);
}

.box-shadow-9{
    -webkit-box-shadow: 0 5px 6px -3px rgba(0,0,0,.2), 0 9px 12px 1px rgba(0,0,0,.14), 0 3px 16px 2px rgba(0,0,0,.12);
    box-shadow: 0 5px 6px -3px rgba(0,0,0,.2), 0 9px 12px 1px rgba(0,0,0,.14), 0 3px 16px 2px rgba(0,0,0,.12);
}

/* sc-button */

.sc-btn{
    background-color: inherit;
    line-height: 66px;
    min-width: 88px;
    height: 36px;
    padding: 0 16px;
    margin: 0;
    font-size: 32rpx;
    border-radius: 2px;
}

.sc-btn-icon{
    width: 76rpx !important;
    min-width: 76rpx !important;
    height: 76rpx !important;
    padding: 0;
    margin-right: 0;
    margin-left: 0;
    overflow: hidden;
    font-size: 38rpx;
    line-height: normal;
    border-radius: 50% !important;
    border-style:none;
}

.sc-icon{
    position: absolute;
    top: 50%;
    left: 50%;
    width: 54rpx !important;
    line-height: 54rpx;
    -webkit-transform: translate(-27rpx,-27rpx);
    transform: translate(-27rpx,-27rpx);
}

.sc-icon, .sc-icon::before{
    font-size: 54rpx;
    font-style: normal;
    font-weight: 400;
    line-height: 1;
    color: inherit;
    text-transform: none;
    letter-spacing: normal;
    word-wrap: normal;
    white-space: nowrap;
    vertical-align: middle;
    direction: ltr;
}

/* sc input */
.sc-input{
    margin: 0;
    border-bottom: 1px solid grey;
    background: 0 0;
}

.sc-input-icon{
    font-size: 58rpx;
}

.sc-input-icon + sc-input{
    display: inline-block;
}
/* sc-textarea */
.sc-textarea{
    margin: 0;
    color: rgb(0,0,0);
    border-bottom: 1px solid grey;
    width: 100%;
}

/* sc-checkbox */
.sc-checkbox{
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: relative;
    height: 36px;
    margin-right:8px;
}
/* sc-checkbox-group */
.sc-checkbox-group-row{
    padding: 8px;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: start;
    align-items: center;
}

.sc-checkbox-group-column{
    display: flex;
    flex-wrap: nowrap;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}


/* sc-progress */
.sc-progress{
    border-radius: 2px;
    width: 100%;
    height: 4px;
    background-color: rgba(63,81,181,.2);
}

.sc-progress-determinate{
    background-color: #3f51b5;
}
