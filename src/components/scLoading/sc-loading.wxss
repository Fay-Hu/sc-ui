.loading{
    position: relative;
    border-radius: 50%;
}

.loading-circle{
    position: absolute;
    width: 100%;
    height: 100%;
    border-top: 2px solid rgba(0,0,0,0);
    border-left: 2px solid rgba(0,0,0,0);
    border-right: 2px solid rgba(0,0,0,0);
    border-radius: 50%;
    left: -2px;
    top: -2px;
}

.loading-circle-active{
    animation: loading-circle-animate 1s linear infinite;
}

@keyframes loading-circle-animate {
    from{
        transform: rotate(0);
    }
    to{
        transform: rotate(360deg);
    }
}