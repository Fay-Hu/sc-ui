.layout-row {
    display: flex;
    flex-direction: row;
}

.layout-start-center {
    justify-content: start;
    align-items: center;
}

.tab-bar{
    flex: 1 1 auto;
}

.tab-bar-list {
    flex: 1 1 auto;
    background: #fff;
    font-size: 30rpx;
    overflow-x: scroll;
}

.tab-bar-list .tab-bar-item {
    position: relative;
    flex-grow: 1;
    text-align: center;
    line-height: 80rpx;
}

.sc-tab-btn {
    background-color: inherit;
    line-height: 66px;
    min-width: 88px;
    height: 36px;
    padding: 0 16px;
    margin: 0;
    font-size: 32rpx;
    border-radius: 2px;
}

.text-6 {
    font-size: 26rpx;
}

.tab-bar-list .tab-bar-item.active {
    color: #0088CC;
}

.tab-bar-driver{
    height:4rpx;
    background-color: #0088CC;
    -moz-transition: all .2s linear;
    -o-transition: all .2s linear;
    -webkit-transition: all .2s linear;
    transition: all .2s linear;
}

.tab-container{
    -moz-transition: all .3s ease-in-out;
    -o-transition: all .3s ease-in-out;
    -webkit-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out;
    flex-wrap: nowrap;
    overflow: visible;
}

.tab-container sc-tab{
    flex: 0 0 100%;
    width: 100%;
    overflow-y: scroll;
    overflow-x: hidden;
    word-break: break-all;
}