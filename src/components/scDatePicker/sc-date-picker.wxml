<sc-dialog id="{{'picker-dialog-'+dialogCount}}">
    <view class="sc-date-picker sc-class">
        <view class="sc-date-picker-header">
            <view class="sc-date-picker-year-select" bind:tap="_changeViewToYear">
                <text>{{selectDateObject.years}}</text>
            </view>
            <view class="sc-date-picker-datetime-select">
                星期{{week[selectWeek]}},{{selectDateObject.months+1}}月,{{selectDateObject.date}}日
            </view>
        </view>
        <view class="sc-date-picker-container">
            <view hidden="{{!yearView}}" style="height: 720rpx;">
                <swiper current="{{currentSwiperItemYearIndex}}" circular display-multiple-items="7" vertical
                        duration="{{duration}}"
                        style="height: 640rpx;">
                    <block>
                        <swiper-item class="sc-date-picker-year-select" bind:tap="_selectYear" wx:for="{{yearList}}"
                                     wx:key="{{item}}" data-year="{{item}}">
                            <view class="sc-date-picker-year-btn {{item === selectYear ? 'selected' :''}}">
                                <text>{{item}}</text>
                            </view>
                        </swiper-item>
                    </block>
                </swiper>
            </view>
            <view hidden="{{yearView}}" style="height: 720rpx;">
                <view class="sc-date-picker-arrow-action">
                    <sc-button sc-class="sc-btn sc-btn-icon" style="display: inline-block;"
                               bind:tap="{{!lockedTap? '_last' :''}}">
                        <text class="sc-icon iconfont icon-back1"></text>
                    </sc-button>
                    <view class="sc-date-picker-datetime-show">
                        <text>{{showDateObject.months+1}}月 {{showDateObject.years}}</text>
                    </view>
                    <sc-button sc-class="sc-btn sc-btn-icon" style="display: inline-block;"
                               bind:tap="{{!lockedTap? '_next' :''}}">
                        <text class="sc-icon iconfont icon-right"></text>
                    </sc-button>
                </view>
                <view class="sc-date-picker-date">
                    <view class="sc-date-picker-date-header">
                        <view>日</view>
                        <view>一</view>
                        <view>二</view>
                        <view>三</view>
                        <view>四</view>
                        <view>五</view>
                        <view>六</view>
                    </view>
                    <view>
                        <swiper current="{{currentSwiperItemDateIndex}}" bindchange="_change" circular
                                duration="{{duration}}" style="height: 480rpx;">
                            <block>
                                <swiper-item class="sc-date-picker-date-select" wx:for="{{dayList}}" wx:key="{{item}}">
                                    <view class="sc-date-picker-date-select-btn {{selectDateObject.date === item.date && selectDateObject.months === item.months && selectDateObject.years === item.years? 'selected' :''}}"
                                          wx:for="{{item}}" wx:key="{{item.date}}" data-date="{{item}}"
                                          bind:tap="_selectDate">
                                        <view>
                                            <text>{{item.date}}</text>
                                        </view>
                                    </view>
                                </swiper-item>
                            </block>
                        </swiper>
                    </view>
                </view>
            </view>
            <view class="sc-date-picker-action">
                <sc-button sc-class="sc-btn" bind:tap="_close">取消</sc-button>
                <sc-button sc-class="sc-btn" bind:tap="_submit">确定</sc-button>
            </view>
        </view>
    </view>
</sc-dialog>


