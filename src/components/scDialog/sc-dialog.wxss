.sc-dialog-mask {
    position: fixed;
    z-index: 9999;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .3);
    overflow: hidden;
}

.sc-dialog {
    position: fixed;
    box-sizing: border-box;
    border-radius: 8 rpx;
    z-index: 10001;
    background-color: white;
    margin: auto;
    max-height: 85%;
    width: 80vw;
    left: 0;
    right: 0;
    top: 50%;
    -webkit-transform: scale(1) translate3d(0, -50%, 0);
    -moz-transform: scale(1) translate3d(0, -50%, 0);
    -o-transform: scale(1) translate3d(0, -50%, 0);
    transform: scale(1) translate3d(0, -50%, 0);
    transform-origin: center;
    overflow-y: scroll;
}

.sc-mask-fadeIn {
    will-change: transform;
    -webkit-animation-name: maskFadeIn;
    -webkit-animation-duration: 0.3s;
    -webkit-animation-timing-function: ease-in-out;
    -webkit-animation-fill-mode: forwards;
}

.sc-mask-fadeOut {
    will-change: transform;
    -webkit-animation-name: maskFadeOut;
    -webkit-animation-duration: 0.3s;
    -webkit-animation-timing-function: ease-in-out;
    -webkit-animation-fill-mode: forwards;
}

.sc-dialog-fadeIn {
    will-change: transform;
    -webkit-animation-name: dialogFadeIn;
    -webkit-animation-duration: 0.3s;
    -webkit-animation-timing-function: ease-in-out;
    -webkit-animation-fill-mode: forwards;
}

.sc-dialog-fadeOut {
    will-change: transform;
    -webkit-animation-name: dialogFadeOut;
    -webkit-animation-duration: .3s;
    -webkit-animation-timing-function: ease-in-out;
    -webkit-animation-fill-mode: forwards;
}

.sc-dialog-slideTopIn {
    will-change: transform;
    -webkit-animation-name: dialogSlideTopIn;
    -webkit-animation-duration: 0.3s;
    -webkit-animation-timing-function: ease-in-out;
    -webkit-animation-fill-mode: forwards;
}

.sc-dialog-slideTopOut {
    will-change: transform;
    -webkit-animation-name: dialogSlideTopOut;
    -webkit-animation-duration: .3s;
    -webkit-animation-timing-function: ease-in-out;
    -webkit-animation-fill-mode: forwards;
}

@keyframes maskFadeIn {
    from {
        opacity: 0;
        visibility: hidden;
    }
    to {
        opacity: 1;
        visibility: visible;
    }
}

@keyframes maskFadeOut {
    from {
        opacity: 1;
        visibility: visible;
    }
    to {
        opacity: 0;
        visibility: hidden;
    }
}

@keyframes dialogFadeIn {
    from {
        opacity: 0;
        -webkit-transform: scale(0.95) translate3d(0, -50%, 0);
        -moz-transform: scale(0.95) translate3d(0, -50%, 0);
        -o-transform: scale(0.95) translate3d(0, -50%, 0);
        transform: scale(0.95) translate3d(0, -50%, 0);
    }
    to {
        opacity: 1;
        -webkit-transform: scale(1) translate3d(0, -50%, 0);
        -moz-transform: scale(1) translate3d(0, -50%, 0);
        -o-transform: scale(1) translate3d(0, -50%, 0);
        transform: scale(1) translate3d(0, -50%, 0);
    }
}

@keyframes dialogFadeOut {
    from {
        opacity: 1;
        -webkit-transform: scale(1) translate3d(0, -50%, 0);
        -moz-transform: scale(1) translate3d(0, -50%, 0);
        -o-transform: scale(1) translate3d(0, -50%, 0);
        transform: scale(1) translate3d(0, -50%, 0);
    }
    to {
        opacity: 0;
        -webkit-transform: scale(0.95) translate3d(0, -50%, 0);
        -moz-transform: scale(0.95) translate3d(0, -50%, 0);
        -o-transform: scale(0.95) translate3d(0, -50%, 0);
        transform: scale(0.95) translate3d(0, -50%, 0);
    }
}

@keyframes dialogSlideTopIn {
    from {
        top: 40%;
        opacity: 0;
    }
    to {
        top: 50%;
        opacity: 1;
    }
}

@keyframes dialogSlideTopOut {
    from {
        top: 50%;
        opacity: 1;
    }
    to {
        top: 40%;
        opacity: 0;
    }
}