.sc-select{
    position: relative;
    max-width: 100%;
    height: 36px;
    max-height: 36px;
    cursor:pointer;
    vertical-align: middle;
    background-color: white;
    opacity: 0;
    transform: scale(0);
    transition: all .15s linear ;
    transform-origin:left top;
    overflow-y:auto;
}

.sc-select.active{
    opacity: 1;
    transform: scale(1);
}

.icon-triangledownfill{
    position: absolute;
    right: 0;
    top: 8px;
}

.sc-options{
    margin-top: -14px;
}

