.sc-select{
    position: relative;
    max-width: 100%;
    height: 36px;
    max-height: 36px;
    cursor:pointer;
    vertical-align: middle;
}

.icon-triangledownfill{
    position: absolute;
    right: 0;
    top: 8px;
}

.sc-options{
    margin-top: -14px;
    opacity: 0;
    transform: scale(0);
    transition: all .3s linear ;
    transform-origin:top;
    overflow-y:scroll;
}

.sc-options-active{
    opacity: 1;
    transform: scale(1);
}