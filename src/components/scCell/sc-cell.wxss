.cell{
    position: relative;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    flex:0 0 100%;
    min-height: 96rpx;
    font-size: 32rpx;
    overflow: hidden;
    border-top: 1px solid lightgrey;
    border-bottom: 1px solid lightgrey;
    padding: 0 16rpx;
}

.cell-left{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: start;
    align-items: center;
    flex: 1 0 25%;
}

.cell-left-container{
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: start;
    padding: 0 16rpx;
}

