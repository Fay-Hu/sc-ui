.sc-textfield-main{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    position: relative;
    width: 100%;
}

.sc-textfield{
    position: relative;
    padding: 16rpx;
    width: 100%;
}

input{
    position: relative;
    display: block;
    height: 64rpx;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-appearance: none;
    overflow: hidden;
    font-size: 32rpx;
    line-height: 20px;
    resize: none;
    border: none;
    text-align: left;
    width: 100%;
}

input::before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 2px;
    width: 0;
    background-color: currentColor;
    transition: width 10s;
    -moz-transition: width .2s;	/* Firefox 4 */
    -webkit-transition: width .2s;	/* Safari 和 Chrome */
    -o-transition: width .2s;	/* Opera */
}

.sc-label{
    display: block;
    width: 100%;
    font-size: 32rpx;
    pointer-events:none; /* 该元素不会成为鼠标事件的target*/
    transform-origin: left;  /* transition旋转或移动的基点*/
    -webkit-transition: all .2s;
    -webkit-transform-origin: left;
    text-align: left;
    color: rgba(0,0,0,.54);
}

.sc-textfield-disabled .sc-label{
    color: rgba(0,0,0,.38);
}

.sc-textfield .sc-label{
    -webkit-transform: scale(.75) translateY(0);
    transform: scale(.75) translateY(0);
}

.sc-textfield-floating-label .sc-label{
    -webkit-transform: scale(1) translateY(54rpx);
    transform: scale(1) translateY(54rpx);
}

.sc-textfield-floating-label .sc-label-focus{
    color: currentColor;
    -webkit-transform: scale(.8) translateY(0);
    transform: scale(.8) translateY(0);
}

.sc-textfield .sc-input-focus{
    border-bottom: none;
}

.sc-textfield-floating-label .sc-input-focus::before{
    width: 100%;
}

.error-text {
    display: block;
    text-align: left;
    color: red;
    transition: opacity .3s ease-in;
    -moz-transition: opacity .3s ease-in; /* Firefox 4 */
    -webkit-transition: opacity .3s ease-in; /* Safari 和 Chrome */
    -o-transition: opacity .3s ease-in; /* Opera */
    opacity: 0;
}

.text-6 {
    font-size: 24rpx;
}

.sc-err-icon{
    font-size: 32rpx;
    position: absolute;
    bottom: 56rpx;
    left: -24rpx;
}

.sc-icon{
    font-size: 32rpx;
    position: absolute;
    bottom: 24rpx;
    left: -24rpx;
}