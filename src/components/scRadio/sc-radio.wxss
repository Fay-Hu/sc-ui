.sc-radio{
    position: relative;
    display: inline-block;
    height: 36px;
    line-height: 36px;
    padding-left: 28px;
}

.sc-radio-icon{
    position: absolute;
    display: inline-block;
    top: 9px;
    left: 0;
    width: 18px;
    height: 18px;
    box-sizing: border-box;
    border-style:solid;
    border-width: 2px;
    border-radius: 50%;
}

.sc-radio-icon:before{
    position: absolute;
    top: 0;
    left: 0;
    width: 14px;
    height: 14px;
    content: ' ';
    opacity: 0;
    background-color: currentColor;
    border-radius: 50%;
    transform: scale(0);
    transition: all .3s cubic-bezier(.4,0,.2,1);
}

.sc-radio-checked .sc-radio-icon:before{
    opacity: 1;
    transform: scale(0.7);
}

.sc-radio-disabled .sc-radio-icon{
    border: 2px solid #b0b0b0;
}

.sc-radio-disabled .sc-radio-icon:before{
    background-color: #b0b0b0;
}

/* ripple */
.sc-ripple{
    position: absolute;
    box-sizing: border-box;
    border-radius: 100%;
    width: 48px;
    height: 48px;
    left: 50%;
    top: 50%;
    transform: translate(-24px,-24px);
}

.sc-ripple view{
    border-radius: 50%;
    opacity: 1;
    width: 100%;
    height: 100%;
    transform: scale(0);
    transform-origin: center center;
}

.sc-ripple-animate{
    animation: sc-ripple-scale .3s ease-out;
    animation-fill-mode: forwards;
}

@keyframes sc-ripple-scale{
    0%{
        transform: scale(0.3);
        opacity: 0;
    }
    60%{
        transform: scale(1);
        opacity: 0.3;
    }

    100%{
        transform: scale(1);
        opacity: 0;
    }
}

